<?php if (count($block->getStores())>1) : ?>
    <div class="langs-wrapper col col-1 offset-1 col-md-1 offset-md-0 float-start">
    <?php foreach ($this->getStores() as $_lang): ?>
        <?php if ($_lang->getCode() != 'default'): ?>
        <a class="lang-flag" href="<?php echo $this->getCurrentUrl() . '?___store=' . $_lang->getCode();?>"><img src="<?php echo $this->getViewFileUrl('images/flags/flag_' . explode("_",$block->escapeHtml($_lang->getCode()))[1] . '.jpg');?>" alt="<?php echo 'could not find image for ' . $_lang->getName() ?>"/></a>
        <?php endif;?>
    <?php endforeach;?>
    </div>
<?php endif; ?>
